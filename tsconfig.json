{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    // "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@alitojs/utils": ["src/index.ts"],
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["typings.d","./src"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
